<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="472.0" prefWidth="1100.0" stylesheets="@../../styles/clients.css"
            xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.newContact.newContactController">
    <children>
        <VBox layoutX="37.0" layoutY="24.0" prefHeight="425.0" prefWidth="578.0" spacing="5.0"
              AnchorPane.leftAnchor="37.0" AnchorPane.topAnchor="24.0">
            <children>
                <HBox prefHeight="15.0" prefWidth="200.0" spacing="10.0"/>
                <HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="80.0" text="First Name*"/>
                        <JFXTextField fx:id="txt_fname" focusColor="#006e0e" prefHeight="35.0" prefWidth="160.0"/>
                        <Label prefHeight="35.0" prefWidth="80.0" text="Last Name*"/>
                        <JFXTextField fx:id="txt_lname" focusColor="#006e0e" prefHeight="35.0" prefWidth="160.0"/>
                    </children>
                </HBox>
                <HBox prefHeight="15.0" prefWidth="200.0" spacing="10.0"/>
                <HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="80.0" text="Address"/>
                        <JFXTextField fx:id="txt_addr" focusColor="#006e0e" prefHeight="30.0" prefWidth="340.0"/>
                    </children>
                </HBox>
                <HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="80.0" text="City*"/>
                        <JFXTextField fx:id="txt_city" focusColor="#006e0e" prefHeight="35.0" prefWidth="85.0"/>
                        <Label prefHeight="35.0" prefWidth="80.0" text="Country*"/>
                        <JFXTextField fx:id="txt_country" focusColor="#006e0e" prefHeight="35.0" prefWidth="85.0"/>
                    </children>
                </HBox>
                <HBox prefHeight="15.0" prefWidth="200.0" spacing="10.0"/>
                <HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="80.0" text="Date of Birth"/>
                        <JFXDatePicker fx:id="joining_date" prefHeight="28.0" prefWidth="200.0"/>
                    </children>
                </HBox>
                <HBox prefHeight="15.0" prefWidth="200.0" spacing="10.0"/>
                <HBox prefHeight="15.0" prefWidth="200.0" spacing="10.0"/>
                <HBox prefHeight="35.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <JFXButton fx:id="btn_email" onAction="#inflateEmail" prefHeight="47.0" prefWidth="59.0"
                                   style="-fx-background-color: #9bc685;" styleClass="btnMenu" text="Email"/>
                        <JFXButton fx:id="btn_phone" onAction="#inflatePhone" prefHeight="82.0" prefWidth="62.0"
                                   style="-fx-background-color: #9bc685;" styleClass="btnMenu" text="Phone"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <JFXButton fx:id="btn_save" buttonType="RAISED" layoutX="932.0" layoutY="427.0" onAction="#saveChanges"
                   prefHeight="45.0" prefWidth="80.0" styleClass="hbox_menu" text="Save" AnchorPane.bottomAnchor="28.0"
                   AnchorPane.rightAnchor="88.0"/>
    </children>
</AnchorPane>
